include $(SCITECH)/makedefs/startup.mk

# In order to avoid pulling in all the OpenGL libraries under DOS,
# we require USE_OPENGL to be enabled in order to build the Game
# Framework libraries with OpenGL support.

ifdef USE_OPENGL
CFLAGS          += -DUSE_OPENGL
endif

# Name of library and object files required to build it

ifdef BUILD_DLL
CFLAGS          += -DBUILD_DLL
DLLFILE         = mglgm$D
LIBNAME         = mglgm
else
ifdef STKCALL
LIBNAME         = sgm
else
LIBNAME         = gm
endif
endif
LIBFILE         = $(LP)$(LIBNAME)$L

OBJECTS         = gm$O getopt$O rlebmp$O dlist$O sprmgr$O  \
				  sprbmp$O sprite$O mglrgn$O winmain$O

# Define the list of object files to create dependency information for

DEPEND_OBJ      = $(OBJECTS)

include $(SCITECH)/makedefs/common.mk

