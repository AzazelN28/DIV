!ifndef ROOT
!error Se requiere la macro ROOT
!endif

!ifndef SEP
!error Se requiere la macro SEP
!endif

!ifndef INC_NOVARS

JPEG_LIB = $(ROOT)$(SEP)3rdparty$(SEP)lib$(SEP)libjpeg.lib
JPEG_DIR = $(ROOT)$(SEP)3rdparty$(SEP)jpeglib
INCLUDE += -I$(JPEG_DIR)

!endif #INC_NOVARS

!ifndef INC_NOTARGETS

$(JPEG_LIB): lib3p_dir .EXISTSONLY
	@%make savedir
	cd $(JPEG_DIR)
	$(MAKE) $^.
	$(COPY) $^. $^:
	@%make loaddir

clean_jpeg: .SYMBOLIC
	@%make savedir
	cd $(JPEG_DIR)
	$(MAKE) clean
	@%make loaddir

!endif #INC_NOTARGETS
